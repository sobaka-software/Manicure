@model Contact

<main class="main">
    <div class="row adress">
        <div class="column text-center">
            @if (Model.Address != null)
            {
                <p class="sity">
                    <strong>Адрес:</strong><br />
                    @Model.Address
                </p>
            }
            @if (Model.Email != null)
            {
                <p class="email">
                    <strong>Email: </strong>@Model.Email
                </p>
            }
            @if (Model.PhoneNumber != null)
            {
                <p class="phone">
                    <strong>Номер телефона:</strong> <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                </p>
            }
            @if (Model.OpeningHours != null)
            {
                <strong class="timeWork">Часы работы: @Model.OpeningHours</strong>
            }
            @if (User.IsInRole("Administrator"))
            {
                <br />
                <a class="btn btn-warning btnAddField">Редактировать</a>
            }
            <br />

        </div>
        <div class="column text-center">
            <img src="~/Images/contacts.jpg" alt="Alternate Text" />
        </div>

    </div>
    @if (User.IsInRole("Administrator"))
    {
        <div class="row">
            @using (Html.BeginForm("Update", "Contact"))
            {
                <div class="addField col-md-5 col-md-offset-1 col-sm-offset-1 col-sm-6">
                    <div class="form-group">
                        <label for="Address">
                            Адрес:
                        </label>
                        @Html.EditorFor(c => c.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите адрес" } })
                    </div>
                    <div class="form-group">
                        <label for="Email">
                            Email
                        </label>
                        @Html.EditorFor(c => c.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите email", type = "email" } })
                    </div>
                    <div class="form-group">
                        <label for="PhoneNumber">
                            Номер телефона
                        </label>
                        @Html.EditorFor(c => c.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите номер телефона", type = "text" } })
                    </div>
                    <div class="form-group">
                        <label for="OpeningHours">
                            Часы работы
                        </label>
                        @Html.EditorFor(c => c.OpeningHours, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите часы работы", type = "text" } })
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-warning btn-add" value="Принять" />
                        <input type="reset" class="btn btn-danger btn-delete" value="Очистить" />
                    </div>
                </div>
            }
        </div>
    }
</main>

