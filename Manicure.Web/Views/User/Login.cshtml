@model Login

<main class="main">
    @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "loginForm col-xs-12 col-sm-6 col-md-6 col-lg-4" }))
    {
        <div class="form-group">
            <label for="login">
                Логин:
            </label>
            @Html.EditorFor(l => l.UserLogin, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите логин" } })
        </div>
        <div class="form-group">
            <label for="password">
                Пароль:
            </label>
            @Html.EditorFor(l => l.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите пароль", type = "password" } })
        </div>
        <div class="form-group flex-container">
            @Html.CheckBoxFor(l => l.RememberMe)
            <label for="RememberMe">
                ЗАПОМНИТЬ
            </label>
            <input type="submit" class="btn-warning btn-md btn btnEnter" name="enter" value="ВХОД" />
        </div>
        <div class="form-group">
            <p class="regBlock">
                Ещё не зарегистированы?
                @Html.ActionLink("Зарегистрироваться", "Register", null, new { @class = "regLink" })
            </p>
        </div>
    }
</main>

